<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="vertical"
        android:useDefaultMargins="true" >

    <TextView
        android:id="@+id/titleLabelTextView"
        style="@style/MovieLabelTextView"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/label_Title" />

    <TextView
        android:id="@+id/titleTextView"
        style="@style/MovieTextView"
        android:layout_column="1"
        android:layout_row="0" />

    <TextView
        android:id="@+id/yearLabelTextView"
        style="@style/MovieLabelTextView"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/label_year" />

    <TextView
        android:id="@+id/yearTextView"
        style="@style/MovieTextView"
        android:layout_column="1"
        android:layout_row="1" />

    <TextView
        android:id="@+id/directorLabelTextView"
        style="@style/MovieLabelTextView"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/label_dirctor" />

    <TextView
        android:id="@+id/directorTextView"
        style="@style/MovieTextView"
        android:layout_column="1"
        android:layout_row="2" />
    
    <TextView
        android:id="@+id/typeLabelTextView"
        style="@style/MovieLabelTextView"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/label_type" />

    <TextView
        android:id="@+id/typeTextView"
        style="@style/MovieTextView"
        android:layout_column="1"
        android:layout_row="3" />
    
    <TextView
        android:id="@+id/lengthLabelTextView"
        style="@style/MovieLabelTextView"
        android:layout_column="0"
        android:layout_row="4"
        android:text="@string/label_length" />

    <TextView
        android:id="@+id/lengthTextView"
        style="@style/MovieTextView"
        android:layout_column="1"
        android:layout_row="4" />

    <TextView
        android:id="@+id/countryLabelTextView"
        style="@style/MovieLabelTextView"
        android:layout_column="0"
        android:layout_row="5"
        android:text="@string/label_country" />

    <TextView
        android:id="@+id/countryTextView"
        style="@style/MovieTextView"
        android:layout_column="1"
        android:layout_row="5" />
    
    <TextView
        android:id="@+id/leadingLabelTextView"
        style="@style/MovieLabelTextView"
        android:layout_column="0"
        android:layout_row="6"
        android:text="@string/label_leading" />

    <TextView
        android:id="@+id/leadingTextView"
        style="@style/MovieTextView"
        android:layout_column="1"
        android:layout_row="6" />

</GridLayout>

</ScrollView>
